{
  "_source": {
    "exclude": [
      "chunked_text",
      "embeddings"
    ]
  },
  "highlight": {
    "fields": {
      "content": {
        "fragment_size": 100,
        "number_of_fragments": 10,
        "post_tags": [
          ""
        ],
        "pre_tags": [
          ""
        ]
      }
    }
  },
  "query": {
    "bool": {
      "filter": [
        {
          "match": {
            "metadata.source": "source"
          }
        },
        {
          "match": {
            "metadata.semantic_source": "semantic-source"
          }
        },
        {
          "nested": {
            "path": "metadata.location",
            "query": {
              "geo_distance": {
                "distance": "10km",
                "metadata.locations.coords": [40.0, 25.0]
              }
            }
          }
        },
        {
          "range": {
            "created_at": {
              "gte": 1756498133
            }
          }
        },
        {
          "range": {
            "created_at": {
              "lte": 1756498133
            }
          }
        },
        {
          "range": {
            "file_size": {
              "gte": 0
            }
          }
        },
        {
          "range": {
            "file_size": {
              "lte": 4096
            }
          }
        }
      ],
      "must": [
        {
          "match": {
            "content": "There is some query"
          }
        }
      ]
    }
  },
  "sort": [
    {
      "created_at": {
        "order": "desc"
      }
    }
  ]
}